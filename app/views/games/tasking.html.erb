
<script src="https://js.pusher.com/3.2/pusher.min.js"></script>
<script>
  var pusher = new Pusher('9624582dd73c35f24351', {
    encrypted: true
  });

  var channel = pusher.subscribe('<%= "channel_#{@game.id}" %>');
  channel.bind('refresh', function(data) {
    location.reload();
  });
</script>


<h1>On Task</h1>
<div class="center jumbotron">
    <%= form_for :task, url: '/games/collect_tasks', method: 'post' do |f| %>
        <%= f.submit "Success", class: 'btn btn-lg btn-primary' %>
        <%= f.submit "Fail", class: 'btn btn-lg btn-primary'%>
    <% end %>
</div>