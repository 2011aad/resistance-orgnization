<div class="center">
    <%= form_for :game, url: '/games/start_game', method: "post" do |f| %>
        <%= f.label :password, 'Password', class: "control-label" %>
        <%= f.password_field :password %>
        
        <div class="controls">
            <%= f.submit 'Confirm', class: "btn btn-primary" %>
        </div>
    <% end %>
</div>